.result
    position relative
    background-color $c-white
    min-height 100vh
    height auto
    +below(768px)
        background-color #fff

    &__content
        position relative
        height 100%
        padding-bottom w(100)

        +below(768px)
            height auto
            padding-top wm(0)
            padding-bottom wm(50)

    &__wrap
        display flex
        flex-flow row nowrap
        align-items stretch
        justify-content space-between
        height 100%

        +below(768px)
            flex-direction column
            padding 0 wm(20) 0 wm(20)

    &__title
        font-family $ff-pt
        font-weight bold
        font-size w(42)
        line-height w(48)
        letter-spacing 0.05em
        text-transform uppercase
        color $c-brown
        padding-top w(90)

        +below(768px)
            font-size 1.2em
            line-height 1
            padding-top wm(0)

    &__answer
        position relative
        font-style normal
        font-weight bold
        font-size w(62)
        line-height w(64)
        padding-top w(10)
        color $c-brown
        font-family $ff-pt

        +below(768px)
            font-size 2em
            line-height 1
            padding-top wm(10)

    &__text
        font-family $ff-pt
        font-style normal
        font-weight normal
        font-size w(24)
        line-height w(28)
        letter-spacing 0.05em
        color $c-brown
        padding-top w(45)
        padding-right w(150)
        height 60vh
        overflow auto

        +below(768px)
            padding-top wm(40)
            padding-right wm(0)
            font-size 0.8em
            line-height 1
            height 40vh
            overflow auto

    &__logo-img
        position relative
        padding-top w(36)
        padding-left w(52)

        img
            width w(265)

        +below(768px)
            display none

    &__sharing
        position absolute
        right w(35)
        top w(550)
        +below(768px)
            right wm(270)
            top wm(1350)
            .sharing__list
                flex-flow row-reverse

    &__images
        position relative

    &__img

        img
            width w(900)
            +below(768px)
                width 100%
                height 100%
    
    &__arrow
        position absolute
        left 50%
        bottom w(35)
        animation MoveUpDown 1.5s linear infinite
        img
            color $c-brown
            width w(40)
            height w(40)
        +below(768px)
            left wm(30)
            img
                width wm(30)
                height wm(30)
    
    &__actions
        margin-top w(30)
        padding-right w(150)
        text-align right
        
    &__btn
        display inline-block
        padding w(5) w(10)
        background-color #915b65
        color #fff
        border-radius w(10)
        font-size w(26)
        border 0
        transition all .3s

        &:hover
            color #915b65
            background-color #fff